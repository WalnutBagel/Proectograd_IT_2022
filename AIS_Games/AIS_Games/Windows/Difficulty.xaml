<Window x:Class="AIS_Games.Windows.Difficulty"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AIS_Games"
        mc:Ignorable="d"
        Title="Difficult" Height="450" Width="800">
    <Grid>
        <Button x:Name="Easy" Click="Easy_Click" Content="Easy" Margin="0,300,600,0" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0"/>
                    <RotateTransform/>
                    <TranslateTransform Y="0"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="Hard" Click="Hard_Click" Content="Hard" Margin="600,300,0,0"/>
        <Grid.Background>
            <ImageBrush ImageSource="RickRoller.jpg"/>
        </Grid.Background>
    </Grid>
</Window>
